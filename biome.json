{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noCommentText": "warn"
			},
			"style": {
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"noShoutyConstants": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "none",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"quoteProperties": "asNeeded"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
